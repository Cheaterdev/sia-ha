    "version": "0.2.0",
    "configurations": [
        {
            // Debug by attaching to local Home Asistant server using Remote Python Debugger.
            // See https://www.home-assistant.io/integrations/debugpy/
            "name": "Home Assistant: Attach Local",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ],
        }
    ]
}